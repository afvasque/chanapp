{% extends 'chanppEvImBundle::layout.html.twig' %}
{% block title %}Editar Cuestionario "{{entity.nombre}}"{% endblock %}
{% block body -%}
{% if entity.getEvaluacionindirecta().getEvaluacion().getDone() == false%}
    <h1>Editar Cuestionario</h1>
    <a href="{{ path('cuestionario_show', {'id' : entity.id}) }}" class="btn">
            Volver a cuestionario
        </a><br><br>
         <form action="{{ path('cuestionario_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" onclick="return confirm('¿Seguro que desea eliminar?')" onclick="return confirm('¿Seguro que desea eliminar?')">Eliminar</button>
        </form>
    <form action="{{ path('cuestionario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
        </p>
    </form>
{% else %}
<h1>La evaluación padre del cuestionario ha sido cerrada, por lo que no se puede seguir editando el cuestionario.</h1>
{% endif %}
{% endblock %}
