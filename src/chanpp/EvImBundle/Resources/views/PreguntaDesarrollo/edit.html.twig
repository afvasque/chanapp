{% extends 'chanppEvImBundle::layout.html.twig' %}
{% block title %}Editar Pregunta Desarrollo{% endblock %}
{% block body -%}

{% if entity.getCuestionario()%}
<div id="breadcrumb-bar">
        <div class="breadcrumb-text">
            <a href="{{ path('cuestionario_show', { 'id': entity.getCuestionario().id }) }}">Cuestionario</a>
            <img  src="{{ asset('img/sidearrow.png') }}" alt="logo"/>
            Editar Pregunta Desarrollo
        </div>
    </div>
{% else %}
<div id="breadcrumb-bar">
        <div class="breadcrumb-text">
            <a href="{{ path('preguntaalternativa', { 'cuestionario_redirect_id': app.request.get('cuestionario_redirect_id')}) }}">Preguntas Sugeridas</a>
            <img  src="{{ asset('img/sidearrow.png') }}" alt="logo"/>
            Editar Pregunta Desarrollo
        </div>
</div>
{% endif %}
{% include 'navbar.html.twig' %}


    <div id="main-content">
        <div class="main-content-title">
            <div class="title-text">
                <h2>Editar Pregunta de Desarrollo</h2>
            </div>
        </div> 


    <div class="createedit-form3">

    
          {% if entity.getCuestionario()%}
           <form action="{{ path('preguntadesarrollo_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
          {% else %}
    <form action="{{ path('preguntadesarrollo_update', { 'id': entity.id, 'cuestionario_redirect_id': app.request.get('cuestionario_redirect_id') }) }}" method="post" {{ form_enctype(edit_form) }}>
        {% endif%}
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-success" >Guardar Cambios</button>
        </p>
    </form>

    </div>   
</div>
{% endblock %}
