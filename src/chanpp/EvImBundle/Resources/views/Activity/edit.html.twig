{% extends 'chanppEvImBundle::layout.html.twig' %}
{% block title %}Editar Actividad {{ entity.nombre }}{% endblock %}
{% block body -%}
    <div id="breadcrumb-bar">
        <div class="breadcrumb-text">
            <a href="{{ path('fichaproyecto') }}">Ficha de Programa"</a>
            <img  src="{{ asset('img/sidearrow.png') }}" alt="logo"/>
            <a href="{{ path('planevaluacion') }}">Plan de Evaluación"</a>
            <img  src="{{ asset('img/sidearrow.png') }}" alt="logo"/>
            <a href="{{ path('evaluacion') }}">Plan de Evaluación</a>
            <img  src="{{ asset('img/sidearrow.png') }}" alt="logo"/>
            Creando Recurso
        </div>
    </div>
    {% include 'navbar.html.twig' %}

    <div id="main-content">
        <div class="main-content-title">
            <div class="title-text">
                <h2>Editar Actividad</h2>
            </div>
        </div>

        <br />
        <br />
        <br />


        <div class="form-content">
            <form action="{{ path('activity_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                <input type="hidden" name="_method" value="PUT" />

                <div class="row-fluid">
                    <div class="span6">
                        {{ form_row(edit_form.nombre) }}
                        {{ form_row(edit_form.descripcion) }}
                    </div>
                        
                    <div class="span6">
                        {{ form_row(edit_form.resultadosEsperados) }}   
                        {{ form_row(edit_form.duracion) }}                 
                    </div>
                </div>

                {{ form_rest(edit_form) }}

                <p>
                    <button type="submit" class="btn btn-success">Guardar Cambios</button>
                </p>

            </form>
        </div>
    </div>

{% endblock %}
