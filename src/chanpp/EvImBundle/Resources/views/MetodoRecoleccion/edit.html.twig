{% extends 'chanppEvImBundle::layout.html.twig' %}
{% block title %}Editar Método de Recolección{% endblock %}
{% block body -%}

    <div id="breadcrumb-bar">
        <div class="breadcrumb-text">
            <a href="{{ path('metodorecoleccion' , { 'original_redirect': app.request.get('original_redirect') , 'original_id': app.request.get('original_id')} ) }}">Métodos de Recolección</a>
            <img  src="{{ asset('img/sidearrow.png') }}" alt="logo"/>
            Editando Método de Recolección
        </div>
    </div>
    {% include 'navbar.html.twig' %}
    
    <div id="main-content">
        <div class="main-content-title">
            <div class="title-text">
                <h2>Editar Método de Recolección</h2>
            </div>
            
        </div>

        <br />
        <br />
        <br />

        <div class="form-content">
            <form action="{{ path('metodorecoleccion_update', { 'id': entity.id , 'original_redirect': app.request.get('original_redirect') , 'original_id': app.request.get('original_id')}) }}" method="post" {{ form_enctype(edit_form) }}>
                <input type="hidden" name="_method" value="PUT" />
                
                <div class="row-fluid">
                    <div class="span6">
                        {{ form_widget(edit_form) }}
                    </div>
                </div>

                <p>
                    <button type="submit" class="btn btn-success">Guardar Cambios</button>
                </p>
            </form>
        </div>
    </div>

{% endblock %}
