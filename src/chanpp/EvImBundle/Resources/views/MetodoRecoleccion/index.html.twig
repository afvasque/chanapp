{% extends 'chanppEvImBundle::layout.html.twig' %}

{% block body -%}
    <h1>Métodos de Recolección</h1>
     <a href="{{ path('metodorecoleccion_new') }}" class="btn btn-success">
                Crear Nuevo Método
    </a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nombre }}</td>
                <td>
                <ul>
                 <a href="{{ path('metodorecoleccion_show', { 'id': entity.id }) }}" class="btn btn-primary">Ver</a>
                 <a href="{{ path('metodorecoleccion_edit', { 'id': entity.id }) }}" class="btn btn-warning">Editar</a>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
           
    {% endblock %}
