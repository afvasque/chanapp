{% extends 'chanppEvImBundle::layout.html.twig' %}

{% block body -%}
    <h1>Evaluación Directa</h1>
        <ul class="record_actions">
    <li>
        <a href="{{ path('evaluaciondirecta_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('evaluaciondirecta_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Valor Original</th>
                <td>{{ entity.resultado }} 
                {% if entity.unidad == 1 %}
                ton
                {% elseif entity.unidad == 2 %}
                m3
                {% elseif entity.unidad == 3 %}
                m3
                {% elseif entity.unidad == 4 %}
                m3
                {% elseif entity.unidad == 5 %}
                m3
                {% elseif entity.unidad == 6 %}
                ton
                {% elseif entity.unidad == 7 %}
                m3
                {% elseif entity.unidad == 8 %}
                kW/h
                {% elseif entity.unidad == 9 %}
                kW/h
                {% elseif entity.unidad == 10%}
                kW/h
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Valor Convertido</th>
                <td>{{ entity.getTotal() }} MW/h</td>
            </tr>
        </tbody>
    </table>
        <ul class="record_actions">
    <li>
        <a href="{{ path('evaluacion_show', { 'id': entity.getEvaluacion().id}) }}">
            Volver a evaluación
        </a>
    </li>
    </li>
</ul>
{% endblock %}
