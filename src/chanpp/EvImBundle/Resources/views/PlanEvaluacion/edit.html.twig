{% extends 'chanppEvImBundle::layout.html.twig' %}

{% block body -%}
    <h1>Editar Plan de Evaluación</h1>
     <a href="{{ path('planevaluacion_show', { 'id': entity.id }) }}" class="btn">
            Volver a Plan de Evaluación
        </a>
    <form action="{{ path('planevaluacion_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        {#  Extra #}
        <label for="comentarioedit">Comentario de cambios realizados:</label> 
        <textarea rows="4" cols="50" name="comentarioedit" required></textarea>
        <p>
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
        </p>
    </form>
{% endblock %}
